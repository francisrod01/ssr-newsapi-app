{
  "name": "ssr-newsapi-app",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Francis Rodrigues",
    "email": "francis.rod01@outlook.com",
    "url": "https://github.com/francisrod01"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "axios": "0.19.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "css-loader": "4.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "6.1.0",
    "react-lazy-load-image-component": "1.5.0",
    "react-materialize": "3.9.2",
    "react-redux": "7.2.1",
    "react-router-config": "5.1.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "svg-url-loader": "6.0.0",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.12",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-node-externals": "2.5.0"
  },
  "scripts": {
    "clean": "rimraf \"build/**\" && rimraf \"server-build/**\"",
    "start": "node ./server-build/index.js",
    "build": "react-scripts build",
    "build-server": "webpack --config webpack.server.js",
    "test": "react-scripts test",
    "dev:build-server": "NODE_ENV=development npm run build-server -- --mode=development -w",
    "dev:start": "nodemon ./server-build/index.js",
    "dev": "npm run clean && npm-run-all --parallel build dev:*",
    "prod:build": "NODE_ENV=production npm run build-server -- --mode=production",
    "precommit": "pretty-quick --staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.1",
    "@testing-library/react": "10.4.7",
    "@testing-library/user-event": "12.0.15",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  }
}
